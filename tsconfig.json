{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/screens/*": ["screens/*"],
      "@/data/*": ["data/*"],
      "@/stores/*": ["stores/*"],
      "@/theme/*": ["theme/*"],
      "@/hooks/*": ["hooks/*"],
      "@/providers/*": ["providers/*"],
      "@/locales/*": ["locales/*"],
      "@/i18n/*": ["i18n/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "App.tsx"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
