{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/screens/*": ["screens/*"],
      "@/data/*": ["data/*"],
      "@/stores/*": ["stores/*"],
      "@/theme/*": ["theme/*"],
      "@/hooks/*": ["hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "App.tsx"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
